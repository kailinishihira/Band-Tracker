@{
  Layout = "_Layout";
}

<a href="/">Home</a>

<h1>Band Tracker</h1>

<h2>Bands</h2>

<h3>Add New Band</h3>
<form action="/bands/all/add" method="post">
  <label for="band-name">Band name: </label>
  <input type="text" id="band-name" name="band-name">
  <button type="submit" class="btn btn-default">Add band</button>
</form>

@foreach (var band in Model)
{
  <li><a href="/bands/@band.GetId()/details">@band.GetName()</a></li>
}
