@{
  Layout = "_Layout";
}

<a href="/"> <span class="glyphicon glyphicon-home home" aria-hidden="true"></span> </a>

| <a href="/bands/all" class="nav-bar">Bands</a> | <a href="/venues/all" class="nav-bar">Venues</a>

<h1>Band Tracker</h1>

<h2>Edit Venue</h2>
<h3>@Model.GetName(), @Model.GetCity()</h3>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="well">
      <form action="/venues/@Model.GetId()/edit-name/details" method="post">
        <label for="venue-name">Venue name: </label>
        <br>
        <input type="text" id="venue-name" name="venue-name">
        <br>
        <button type="submit" class="btn btn-default">Update</button>
      </form>

      <form action="/venues/@Model.GetId()/edit-city/details" method="post">
        <label for="venue-city">Venue city: </label>
        <br>
        <input type="text" id="venue-city" name="venue-city">
        <br>
        <button type="submit" class="btn btn-default">Update</button>
      </form>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>
