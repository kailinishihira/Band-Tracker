@{
  Layout = "_Layout";
}

<a href="/">Home</a>

<h1>Band Tracker</h1>

<h3>Edit @Model.GetName()</h3>
<h4>City: @Model.GetCity()</h4>

<form action="/venues/@Model.GetId()/edit-name/details" method="post">
  <label for="venue-name">Venue name: </label>
  <input type="text" id="venue-name" name="venue-name">
  <button type="submit" class="btn btn-default">Update</button>
</form>

<form action="/venues/@Model.GetId()/edit-city/details" method="post">
  <label for="venue-city">Venue city: </label>
  <input type="text" id="venue-city" name="venue-city">
  <button type="submit" class="btn btn-default">Update</button>
</form>
