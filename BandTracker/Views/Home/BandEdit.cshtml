@{
  Layout = "_Layout";
}

<a href="/">Home</a>

<h1>Band Tracker</h1>

<h2>Edit Band</h2>

<h3>@Model.GetName()</h3>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="well">
      <form action="/bands/@Model.GetId()/edit-name/details" method="post">
        <label for="band-name">Band name: </label>
        <input type="text" id="band-name" name="band-name">
        <button type="submit" class="btn btn-default">Update</button>
      </form>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>
