@{
  Layout = "_Layout";
}

<a href="/">Home</a>

<h1>Band Tracker</h1>

<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-5">
    <h3>Venues</h3>
    <div class="well">
      @foreach (var venue in Model)
      {
        <li><a href="/venues/@venue.GetId()/details">@venue.GetName()</a></li>
      }
    </div>
  </div>

  <div class="col-md-5">
    <h3>Add New Venue</h3>
    <div class="well">
      <form action="/venues/all/add" method="post">
        <label for="venue-name">Venue name: </label>
        <input type="text" id="venue-name" name="venue-name">
        <label for="venue-city">Venue city: </label>
        <input type="text" id="venue-city" name="venue-city">
        <button type="submit" class="btn btn-default">Add venue</button>
      </form>
    </div>
  </div>
  <div class="col-md-1">
  </div>
</div>
